# Production image for scheduler: builds bootJar with Gradle, then runs on JRE
FROM gradle:9.2.1-jdk25-ubi10 AS builder

WORKDIR /workspace
COPY backend/ ./
RUN gradle :scheduler:bootJar -x test --no-daemon

FROM eclipse-temurin:25-jre
WORKDIR /app
COPY --from=builder /workspace/scheduler/build/libs/scheduler-*.jar /app/app.jar
EXPOSE 8081
ENTRYPOINT ["java","-jar","/app/app.jar"]
